{
  "manifest_version": 2,

  "name": "sbrowse",
  "description": "This extension transcode cyrilic on the fly for the current page",
  "version": "1.0",
  "icons": {
    "128": "chrome-icon-lg.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "SBrOwse"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"],
    "run_at": "document_end",
    "all_frames": true
  }]
}
